<UserControl x:Class="TwitchBot.WPF.UserControls.RowItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TwitchBot.WPF.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Left, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Foreground="White"/>
        <TextBlock Grid.Column="1" Text="{Binding Right, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Foreground="White"/>
    </Grid>
</UserControl>
